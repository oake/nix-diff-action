{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'schedule:weekly',
  ],
  packageRules: [
    {
      groupName: 'GitHub Actions packages',
      matchPackageNames: [
        '/^@actions//',
      ],
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'devDependencies (non-major)',
    },
  ],
}
